<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

   		<!-- Database connection settings -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dbpayless?useSSL=false</property>
		<property name="hibernate.connection.username">payless</property>
		<property name="hibernate.connection.password">payless123</property>

		<!-- Configuracion del pool interno -->
		<property name="connection.pool_size">10</property>


		<!-- Dialecto de la base de datos -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>


		<!-- ESTA LINEA PERMITE QUE SE CREE LA TABLA EN PRINCIPIO Y VAYA ACTUALIZANDO 
			LA INFORMACION -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="use_sql_comments">true</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		
		
		
		<!-- Mapeo de Resources y clases-->
		
		<mapping class="demo.Payless.model.Usser"/>
		<mapping class="demo.Payless.model.Consumer"/>
		<mapping class="demo.Payless.model.Trader"/>
		<mapping class="demo.Payless.model.Purchase"/>
		
		<mapping class="demo.Payless.model.Product"/>
		<mapping class="demo.Payless.model.MeatProduct"/>
		<mapping class="demo.Payless.model.MilkProduct"/>
		<mapping class="demo.Payless.model.CareProduct"/>
		
		<mapping class="demo.Payless.model.Invoice"/>
		
		<!--  
		<mapping class="demo.Payless.test.Test2"/>
		
		
	
		
		-->
		
		
		
		
		
		
		
		
	

	
	
	</session-factory>
</hibernate-configuration>
